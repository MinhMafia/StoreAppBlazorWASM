@code {
    private string userName = "Admin";
    private string userRole = "Administrator";
    private bool dropdownOpen = false;

    protected override async Task OnInitializedAsync()
    {
        userName = await LocalStorage.GetItemAsStringAsync("userName") ?? "User";
        userRole = await LocalStorage.GetItemAsStringAsync("userRole") ?? "Guest";
        
        // Remove quotes if present
        userName = userName.Trim('"');
        userRole = userRole.Trim('"');
    }

    private void ToggleDropdown()
    {
        dropdownOpen = !dropdownOpen;
    }

    [JSInvokable]
    public static void CloseDropdown()
    {
        // This will be called from JS
    }

    private void NavigateToProfile()
    {
        dropdownOpen = false;
        Nav.NavigateTo("/admin/profile");
    }

    private void NavigateToSettings()
    {
        dropdownOpen = false;
        Nav.NavigateTo("/admin/settings");
    }

    private async Task HandleLogout()
    {
        dropdownOpen = false;
        
        var confirmed = await JS.InvokeAsync<bool>("confirm", "B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën ƒëƒÉng xu·∫•t?");
        if (confirmed)
        {
            await LocalStorage.RemoveItemAsync("authToken");
            await LocalStorage.RemoveItemAsync("userName");
            await LocalStorage.RemoveItemAsync("userRole");
            Nav.NavigateTo("/login", forceLoad: true);
        }
    }
}