<script>
    window.momoPopup = {
        popup: null,
        closed: false,
        timer: null
    };

    window.openMoMoPayment = function (payUrl) {
        window.momoPopup.closed = false;

        const popup = window.open(
            payUrl,
            "_blank",
            "width=480,height=700,scrollbars=yes,resizable=yes,menubar=no,toolbar=no,location=no,status=no"
        );

        if (!popup || popup.closed || typeof popup.closed === "undefined") {
            alert("Tr√¨nh duy·ªát ƒë√£ ch·∫∑n popup! Vui l√≤ng b·∫≠t popup ƒë·ªÉ thanh to√°n MoMo.");
            window.momoPopup.closed = true;
            return;
        }

        window.momoPopup.popup = popup;

        window.momoPopup.timer = setInterval(() => {
            if (window.momoPopup.popup.closed) {
                window.momoPopup.closed = true;
                clearInterval(window.momoPopup.timer);
            }
        }, 500);
    };

    window.isMoMoPopupClosed = function () {
        return window.momoPopup.closed;
    };

    // Close dropdown when clicking outside
    window.addEventListener('click', function(e) {
        if (!e.target.closest('.dropdown')) {
            DotNet.invokeMethodAsync('StoreApp.Client', 'CloseDropdown');
        }
    });
</script>

