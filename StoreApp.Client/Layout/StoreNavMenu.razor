@using Blazored.LocalStorage
@using StoreApp.Client.Services
@using Microsoft.AspNetCore.Components.Web
@inject ILocalStorageService LocalStorage
@inject IStoreCartService CartService
@inject NavigationManager Nav
@implements IDisposable

<!-- Top Bar -->
<div class="top-bar">
    <div class="container">
        <div class="top-bar-content">
            <div class="top-bar-left">
                <span>Tổng đài: 1900.0010 | 1900.0012</span>
            </div>
            <div class="top-bar-right">
                <div class="search-box">
                    <input type="text"
                           placeholder="Bạn muốn mua gì?"
                           class="search-input"
                           @bind="topSearch"
                           @bind:event="oninput"
                           @onkeypress="HandleTopSearchKeyPress" />
                    <button class="search-btn" @onclick="PerformTopSearch">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Header -->
<header class="store-header">
    <div class="container">
        <div class="header-content">
            <div class="logo-section">
                <a href="/store" class="logo">
                    <div class="logo-icon">
                        <i class="bi bi-shop"></i>
                    </div>
                    <div class="logo-text">
                        <h1>FreshMart</h1>
                        <p>Thực phẩm tươi sống</p>
                    </div>
                </a>
            </div>

            <!-- Service Info -->
            <div class="service-info">
                <div class="service-item">
                    <i class="bi bi-truck"></i>
                    <div>
                        <strong>Giao hàng Toàn Quốc</strong>
                        <span>Miễn phí vận chuyển</span>
                    </div>
                </div>
                <div class="service-item">
                    <i class="bi bi-telephone"></i>
                    <div>
                        <strong>Hotline: 09 3574 3575</strong>
                        <span>Hỗ trợ 24/7</span>
                    </div>
                </div>
                <div class="service-item">
                    <i class="bi bi-credit-card"></i>
                    <div>
                        <strong>Thanh toán dễ dàng</strong>
                        <span>Nhận hàng thanh toán</span>
                    </div>
                </div>
            </div>

            <!-- Cart -->
            <div class="cart-section">
                <NavLink href="/store/cart" class="cart-link">
                    <div class="cart-icon-wrapper">
                        <i class="bi bi-cart3"></i>
                        @if (cartItemCount > 0 && IsCustomer)
                        {
                            <span class="cart-badge">@cartItemCount</span>
                        }
                    </div>
                    <span class="cart-amount">@(IsCustomer ? $"{cartTotalAmount:N0}₫" : "Giỏ hàng")</span>
                </NavLink>
            </div>
        </div>
    </div>
</header>

<!-- Navigation Bar -->
<nav class="store-navbar">
    <div class="container">
        <div class="navbar-content">
            <div class="navbar-menu">
                <NavLink href="/store" Match="NavLinkMatch.All" class="nav-link">
                    <i class="bi bi-house-door"></i>
                    <span>TRANG CHỦ</span>
                </NavLink>
                <NavLink href="/store/products" class="nav-link">
                    <i class="bi bi-grid"></i>
                    <span>SẢN PHẨM</span>
                </NavLink>
                <NavLink href="/store/cart" class="nav-link">
                    <i class="bi bi-cart3"></i>
                    <span>GIỎ HÀNG</span>
                </NavLink>
                @if (IsCustomer)
                {
                    <NavLink href="/store/orders" class="nav-link">
                        <i class="bi bi-receipt"></i>
                        <span>ĐƠN HÀNG CỦA TÔI</span>
                    </NavLink>
                    <NavLink href="/store/profile" class="nav-link">
                        <i class="bi bi-person-circle"></i>
                        <span>HỒ SƠ</span>
                    </NavLink>
                    <button class="nav-link logout-btn" @onclick="HandleLogout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>ĐĂNG XUẤT</span>
                    </button>
                }
                else
                {
                    <NavLink href="/login" class="nav-link">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>ĐĂNG NHẬP</span>
                    </NavLink>
                    <NavLink href="/register" class="nav-link">
                        <i class="bi bi-person-plus"></i>
                        <span>ĐĂNG KÝ</span>
                    </NavLink>
                }
            </div>
        </div>
    </div>
</nav>

@code {
    private int cartItemCount = 0;
    private decimal cartTotalAmount = 0;
    private bool IsLoggedIn;
    private bool IsCustomer;
    private string? topSearch;

    protected override async Task OnInitializedAsync()
    {
        CartService.OnCartChanged += OnCartChanged;
        await CheckLoginAsync();
        await LoadCartInfo();
    }

    private async Task OnCartChanged()
    {
        await LoadCartInfo();
        await InvokeAsync(StateHasChanged);
    }

    private async Task CheckLoginAsync()
    {
        try
        {
            var token = await LocalStorage.GetItemAsStringAsync("authToken");
            var role = await LocalStorage.GetItemAsStringAsync("userRole");

            IsLoggedIn = !string.IsNullOrWhiteSpace(token);
            IsCustomer = string.Equals(role?.Trim('"'), "customer", StringComparison.OrdinalIgnoreCase);

            if (IsCustomer)
            {
                await CartService.PullFromServerAsync();
            }
        }
        catch
        {
            IsLoggedIn = false;
            IsCustomer = false;
        }
    }

    private async Task LoadCartInfo()
    {
        try
        {
            if (!IsCustomer)
            {
                cartItemCount = 0;
                cartTotalAmount = 0;
                return;
            }

            cartItemCount = await CartService.GetCartItemCount();
            var cartItems = await CartService.GetCartItems();
            cartTotalAmount = cartItems.Sum(x => x.Total);
        }
        catch
        {
            cartItemCount = 0;
            cartTotalAmount = 0;
        }
    }

    private async Task HandleLogout()
    {
        if (IsCustomer)
        {
            await CartService.SyncToServerAsync();
            // Chỉ xóa local để tránh ghi đè cart trên server thành rỗng
            await CartService.ClearLocalCart();
        }

        await LocalStorage.RemoveItemAsync("authToken");
        await LocalStorage.RemoveItemAsync("userName");
        await LocalStorage.RemoveItemAsync("userRole");
        Nav.NavigateTo("/store", forceLoad: true);
    }

    private void PerformTopSearch()
    {
        var keyword = topSearch?.Trim();

        if (string.IsNullOrWhiteSpace(keyword))
        {
            Nav.NavigateTo("/store/products");
            return;
        }

        var encoded = Uri.EscapeDataString(keyword);
        Nav.NavigateTo($"/store/products?search={encoded}");
    }

    private Task HandleTopSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PerformTopSearch();
        }

        return Task.CompletedTask;
    }

    public void Dispose()
    {
        CartService.OnCartChanged -= OnCartChanged;
    }
}
