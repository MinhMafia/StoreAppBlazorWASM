<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl mx-4">

    <!-- Header -->
    <div class="flex justify-between items-center p-5 border-b">
      <h3 class="text-xl font-bold">Chọn Sản Phẩm</h3>
      <button class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="p-5">

      <!-- Search -->
      <div class="flex gap-2 mb-4">
        <input type="text" placeholder="Tìm sản phẩm..." class="flex-1 border px-3 py-2 rounded" />
        <button class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Tìm kiếm</button>
        <button class="px-3 py-2 bg-green-500 text-white rounded hover:bg-green-600 flex items-center justify-center">
          <ion-icon name="reload-outline" class="text-xl"></ion-icon>
        </button>


      </div>

      <!-- Table -->
      <div class="max-h-96 overflow-y-auto border rounded-lg">
        <table class="w-full text-sm">
          <thead class="bg-gray-100 sticky top-0">
            <tr>
              <th class="px-4 py-2 text-left">Mã</th>
              <th class="px-4 py-2 text-left">Tên SP</th>
              <th class="px-4 py-2 text-right">Giá</th>
              <th class="px-4 py-2 text-right">Tồn kho</th>
              <th class="px-4 py-2 text-center">Chọn</th>
            </tr>
          </thead>

          <tbody>
            <tr class="hover:bg-gray-50 cursor-pointer">
              <td class="px-4 py-2">1</td>
              <td class="px-4 py-2">Sản phẩm A</td>
              <td class="px-4 py-2 text-right font-bold">120.000₫</td>
              <td class="px-4 py-2 text-right">35</td>
              <td class="px-4 py-2 text-center">
                <input type="radio" name="selectedProduct" />
              </td>
            </tr>

            <tr class="hover:bg-gray-50 cursor-pointer">
              <td class="px-4 py-2">2</td>
              <td class="px-4 py-2">Sản phẩm B</td>
              <td class="px-4 py-2 text-right font-bold">85.000₫</td>
              <td class="px-4 py-2 text-right">12</td>
              <td class="px-4 py-2 text-center">
                <input type="radio" name="selectedProduct" />
              </td>
            </tr>

            <tr class="hover:bg-gray-50 cursor-pointer">
              <td class="px-4 py-2">3</td>
              <td class="px-4 py-2">Sản phẩm C</td>
              <td class="px-4 py-2 text-right font-bold">50.000₫</td>
              <td class="px-4 py-2 text-right">78</td>
              <td class="px-4 py-2 text-center">
                <input type="radio" name="selectedProduct" />
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center items-center gap-3 mt-4">
      <button class="px-3 py-1 bg-blue-600 text-white rounded">Prev</button>
      <span>1 / 5</span>
      <button class="px-3 py-1 bg-blue-600 text-white rounded">Next</button>
    </div>

    <!-- Footer -->
    <div class="flex justify-end gap-3 p-5 border-t">
      <button class="px-6 py-2 bg-purple-500 text-white rounded-lg font-bold hover:bg-purple-600">
        Chọn Sản Phẩm
      </button>
    </div>

  </div>
</div>