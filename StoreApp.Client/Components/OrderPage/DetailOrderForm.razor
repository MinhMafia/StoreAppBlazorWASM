<div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl mb-6 border border-indigo-200 shadow-sm">

    <h4 class="text-xl font-bold text-gray-800 mb-4">CHI TIẾT ĐƠN HÀNG</h4>

    @if(ordersFormMode == "create")
    {
        <div class="space-y-5 mb-6">

            <!-- Chọn sản phẩm -->
            <div>
                <label class="block text-xs font-medium text-gray-600 mb-1">Sản phẩm</label>
                <div class="flex gap-3">
                    <input readonly placeholder="Chưa chọn sản phẩm..." value="Vui lòng chọn sản phẩm"
                        class="flex-1 px-4 py-2.5 border border-gray-300 rounded-lg bg-gray-100 text-sm font-medium" />

                    <button type="button" class="px-5 py-2.5 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition flex items-center gap-2 font-medium">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Chọn
                    </button>
                </div>
            </div>

            <!-- Grid thông tin -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Giá</label>
                    <input type="number" value="150000"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                </div>

                <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Số lượng</label>
                    <input type="number" value="1" min="1"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                </div>

                <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Tổng tiền</label>
                    <input readonly value="150,000"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg bg-gray-100 text-sm font-medium" />
                </div>
            </div>

            <!-- Hai nút ngang hàng -->
            <div class="flex gap-4">
                <button type="button" class="px-7 py-3 bg-blue-600 text-white rounded-lg font-bold hover:bg-blue-700 transition shadow-md flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Thêm chi tiết
                </button>

                <button type="button" class="px-7 py-3 bg-green-600 text-white rounded-lg font-bold hover:bg-green-700 transition shadow-md flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Lưu chỉnh sửa
                </button>
            </div>
        </div>
       
    }
    
    <!-- FORM -->
    

    <!-- DANH SÁCH SẢN PHẨM -->
    <div>
        <h4 class="text-xl font-bold text-gray-800 mb-4">DANH SÁCH SẢN PHẨM</h4>

        <div class="overflow-x-auto rounded-xl border border-gray-300 shadow">
            <table class="w-full text-sm">
                <thead class="bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700">
                    <tr>
                        <th class="px-6 py-4 text-left font-bold">Mã SP</th>
                        <th class="px-6 py-4 text-left font-bold">Tên SP</th>
                        <th class="px-6 py-4 text-center font-bold">SL</th>
                        <th class="px-6 py-4 text-right font-bold">Giá</th>
                        <th class="px-6 py-4 text-right font-bold">Tổng</th>
                        @if (ordersFormMode == "create")
                        {
                            <th class="px-6 py-4 text-center font-bold">Thao tác</th>
                        }
                        
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200 bg-white">
                    @foreach(var item in ListOrderProducts)
                    {
                        <tr class="hover:bg-indigo-50 transition duration-200">
                            <td class="px-6 py-4 font-medium">@item.id</td>
                            <td class="px-6 py-4">@item.product</td>
                            <td class="px-6 py-4 text-center">@item.qty</td>
                            <td class="px-6 py-4 text-right">@item.price</td>
                            <td class="px-6 py-4 text-right font-bold text-blue-600">@item.total</td>
                            @if (ordersFormMode == "create")
                            {
                                <td class="px-6 py-4 text-center">
                                    <div class="flex justify-center gap-3">
                                        <button type="button"
                                                class="flex items-center gap-1.5 px-4 py-2 bg-blue-500 text-white text-xs font-semibold rounded-lg hover:bg-amber-600 transition shadow">
                                            Sửa
                                        </button>
                                        <button type="button"
                                                class="flex items-center gap-1.5 px-4 py-2 bg-red-500 text-white text-xs font-semibold rounded-lg hover:bg-red-600 transition shadow">
                                            Xóa
                                        </button>
                                    </div>
                                </td>
                            }

                            
                        </tr>
                    }
@* 
                    <!-- Lặp lại cho các dòng khác -->
                    <tr class="hover:bg-indigo-50 transition duration-200">
                        <td class="px-6 py-4 font-medium">P002</td>
                        <td class="px-6 py-4">Sản phẩm B</td>
                        <td class="px-6 py-4 text-center">1</td>
                        <td class="px-6 py-4 text-right">220,000</td>
                        <td class="px-6 py-4 text-right font-bold text-blue-600">220,000</td>
                        @if(ordersFormMode != "detail")
                        {
                            <td class="px-6 py-4 text-center">
                                <div class="flex justify-center gap-3">
                                    <button type="button" class="flex items-center gap-1.5 px-4 py-2 bg-blue-500 text-white text-xs font-semibold rounded-lg hover:bg-amber-600 transition shadow">Sửa</button>
                                    <button type="button" class="flex items-center gap-1.5 px-4 py-2 bg-red-500 text-white text-xs font-semibold rounded-lg hover:bg-red-600 transition shadow">Xóa</button>
                                </div>
                            </td>
                        }
                        
                    </tr> *@

                   

                </tbody>
            </table>
        </div>

        
    </div>
</div>
@code {
    [Parameter]
    public string ordersFormMode { get; set; } = "create"; // "create" hoặc "edit"
    [Parameter] 
    public List<OrderItemReponse> ListOrderProducts { get; set; } = new List<OrderItemReponse>();
    
}