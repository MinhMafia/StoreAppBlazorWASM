@* Components/Customer/CustomerEditModal.razor *@
@using StoreApp.Shared
@inject ICustomerClientService CustomerService
@inject IJSRuntime JS

@if (IsOpen)
{
    <!-- Backdrop -->
    <div class="modal-backdrop fade show"></div>

    <!-- Modal -->
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow">

                <!-- Header -->
                <div class="modal-header py-3 d-flex justify-content-between align-items-center">
                    <h5 class="modal-title fw-bold mb-0">Chỉnh Sửa Thông Tin Khách Hàng</h5>

                    <button type="button" class="btn btn-sm btn-light ms-auto" aria-label="Close" @onclick="OnClose">
                        <!-- X icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                             class="bi bi-x-lg" viewBox="0 0 16 16">
                            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                        </svg>
                    </button>
                </div>

                <!-- Body -->
                <div class="modal-body">

                    @if (isLoading)
                    {
                        <div class="text-center py-4 text-secondary">Đang tải...</div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger border" role="alert">
                                @errorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success border" role="alert">
                                @successMessage
                            </div>
                        }

                        <EditForm Model="@customerDto" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    Họ và Tên <span class="text-danger">*</span>
                                </label>

                                <InputText class="form-control"
                                           placeholder="Nhập họ và tên"
                                           @bind-Value="customerDto.FullName" />

                                <ValidationMessage For="@(() => customerDto.FullName)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    Số Điện Thoại <span class="text-danger">*</span>
                                </label>

                                <InputText class="form-control"
                                           placeholder="Nhập số điện thoại"
                                           @bind-Value="customerDto.Phone" />

                                <ValidationMessage For="@(() => customerDto.Phone)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email</label>

                                <InputText type="email" class="form-control"
                                          placeholder="Nhập email"
                                          @bind-Value="customerDto.Email" />

                                <ValidationMessage For="@(() => customerDto.Email)" />
                            </div>

                            <div class="mb-0">
                                <label class="form-label fw-semibold">Địa Chỉ</label>

                                <InputTextArea class="form-control"
                                              rows="3"
                                              placeholder="Nhập địa chỉ"
                                              @bind-Value="customerDto.Address" />

                                <ValidationMessage For="@(() => customerDto.Address)" />
                            </div>
                        </EditForm>
                    }
                </div>

                <!-- Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" @onclick="OnClose" disabled="@(isLoading || isSaving)">
                        Hủy
                    </button>

                    @if (isSaving)
                    {
                        <button type="button" class="btn btn-primary" disabled>
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Đang lưu...
                        </button>
                    }
                    else if (!isLoading)
                    {
                        <button type="button" class="btn btn-primary" @onclick="HandleSubmit">
                            Lưu Thay Đổi
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public int? CustomerId { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private CustomerUpdateDTO customerDto = new();
    private CustomerResponseDTO? originalCustomer;
    private bool isLoading = false;
    private bool isSaving = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && CustomerId.HasValue)
        {
            await LoadCustomer();
        }
        else if (IsOpen)
        {
            // Reset when modal opens without customer ID
            customerDto = new CustomerUpdateDTO();
            originalCustomer = null;
            successMessage = null;
            errorMessage = null;
        }
    }

    private async Task LoadCustomer()
    {
        if (!CustomerId.HasValue) return;

        isLoading = true;
        errorMessage = null;

        try
        {
            originalCustomer = await CustomerService.GetCustomerById(CustomerId.Value);
            if (originalCustomer != null)
            {
                customerDto = new CustomerUpdateDTO
                {
                    FullName = originalCustomer.FullName,
                    Phone = originalCustomer.Phone,
                    Email = originalCustomer.Email,
                    Address = originalCustomer.Address
                };
            }
            else
            {
                errorMessage = "Không tìm thấy khách hàng";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải thông tin: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (!CustomerId.HasValue) return;

        if (string.IsNullOrWhiteSpace(customerDto.FullName))
        {
            errorMessage = "Họ và tên không được để trống";
            return;
        }

        if (string.IsNullOrWhiteSpace(customerDto.Phone))
        {
            errorMessage = "Số điện thoại không được để trống";
            return;
        }

        isSaving = true;
        successMessage = null;
        errorMessage = null;

        try
        {
            await CustomerService.UpdateCustomer(CustomerId.Value, customerDto);
            successMessage = "Cập nhật thông tin khách hàng thành công!";
            await Task.Delay(1000); // Show success message briefly
            await OnSave.InvokeAsync();
            await OnClose.InvokeAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi cập nhật: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}

