<div class="bg-white rounded-xl shadow-xl overflow-hidden p-4">
    <div class="overflow-x-auto">
        <table class="w-full text-sm">
            <thead class="bg-gradient-to-r from-gray-100 to-gray-200">
                <tr>
                    <th class="px-5 py-3 text-left font-bold">Thời gian</th>
                    <th class="px-5 py-3 text-left font-bold">Nhân viên</th>
                    <th class="px-5 py-3 text-left font-bold">Hành động</th>
                    <th class="px-5 py-3 text-left font-bold">Đối tượng</th>
                    <th class="px-5 py-3 text-left font-bold">Chi tiết</th>
                    <th class="px-5 py-3 text-left font-bold">IP</th>
                    <th class="px-5 py-3 text-left font-bold">Thao tác</th>
                </tr>
            </thead>

            <tbody className="divide-y">
                @if (listLog != null && listLog.Any())
                {
                    @foreach (var log in listLog)
                    {
                        <tr class="hover:bg-gray-50 transition cursor-pointer">
                            <td class="px-5 py-3 text-xs font-medium">
                                @log.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")
                            </td>

                            <td class="px-5 py-3 font-medium">
                                @log.Username
                            </td>

                            <td class="px-5 py-3">
                                <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs">
                                    @log.Action
                                </span>
                            </td>

                            <td class="px-5 py-3 font-medium">
                                @log.EntityType
                            </td>

                            <td class="px-5 py-3 text-xs text-gray-600 truncate max-w-xs"
                                title="@log.Payload">
                                @log.Payload
                            </td>

                            <td class="px-5 py-3 text-xs text-gray-500">
                                @log.IpAddress
                            </td>

                            <td className="px-5 py-3">
                                <button class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition"
                                        @onclick="() => ViewDetail.InvokeAsync(log)">
                                    Xem
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7"
                            class="text-center text-gray-500 py-4 italic">
                            Không có dữ liệu hoạt động nào.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="flex items-center justify-between p-4 border-t bg-gray-50">
        <button class="px-5 py-2 border rounded-lg bg-purple-600 text-white text-sm font-bold
                        hover:bg-purple-700 transition disabled:opacity-50"
                disabled="@(currentPage <= 1)"
                @onclick="() => ChangePage.InvokeAsync(currentPage - 1)">
            Prev
        </button>

        <span class="text-sm font-medium">
            Trang <strong>@currentPage</strong> / <strong>@totalPages</strong>
        </span>

        <button class="px-5 py-2 border rounded-lg bg-purple-600 text-white text-sm font-bold
                        hover:bg-purple-700 transition disabled:opacity-50"
                disabled="@(currentPage >= totalPages)"
                @onclick="() => ChangePage.InvokeAsync(currentPage + 1)">
            Next
        </button>
    </div>
</div>
@code {
    [Parameter] public List<ActivityLogCreateDTO> listLog { get; set; } = new();

    [Parameter] public int currentPage { get; set; } = 1;

    [Parameter] public int totalPages { get; set; } = 1;

    [Parameter] public EventCallback<ActivityLogCreateDTO> ViewDetail { get; set; }

    [Parameter] public EventCallback<int> ChangePage { get; set; }
}
