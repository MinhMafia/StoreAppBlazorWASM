@code {
    [Parameter] public string Icon { get; set; } = "tag";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public int Value { get; set; }
    [Parameter] public string Color { get; set; } = "blue";
}

<div class="w-full md:w-1/2 lg:w-1/4 px-3 mb-6">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow h-full">
        <div class="flex items-center">
            <div class="shrink-0 @GetBgColor() rounded-lg p-3">
                @GetIconSvg()
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">@Label</p>
                <p class="text-2xl font-semibold text-gray-900">@Value</p>
            </div>
        </div>
    </div>
</div>

@code {
    private string GetBgColor() => Color switch
    {
        "blue" => "bg-blue-100",
        "green" => "bg-green-100",
        "red" => "bg-red-100",
        "gray" => "bg-gray-100",
        _ => "bg-blue-100"
    };

    private string GetTextColor() => Color switch
    {
        "blue" => "text-blue-600",
        "green" => "text-green-600",
        "red" => "text-red-600",
        "gray" => "text-gray-600",
        _ => "text-blue-600"
    };

    private RenderFragment GetIconSvg() => Icon switch
    {
        "tag" => @<svg class="w-6 h-6 @GetTextColor()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>,
        "check" => @<svg class="w-6 h-6 @GetTextColor()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>,
        "clock" => @<svg class="w-6 h-6 @GetTextColor()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>,
        "x" => @<svg class="w-6 h-6 @GetTextColor()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
        </svg>,
        _ => @<svg class="w-6 h-6 @GetTextColor()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
    };
}


