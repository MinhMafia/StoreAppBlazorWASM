@page "/admin/inventory"
@using StoreApp.Shared
@inject IInventoryClientService InventoryService

<PageTitle>Quản lý tồn kho & Nhập hàng</PageTitle>

<div class="container-fluid px-4 py-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
            <i class="bi bi-boxes text-primary"></i>
            Quản lý tồn kho & Nhập hàng
        </h1>

        <div class="flex items-center gap-3">
            <button class="px-4 py-2 rounded-lg bg-amber-100 text-amber-700 hover:bg-amber-200 text-sm font-semibold flex items-center gap-2"
                    @onclick="OpenAuditModal"
                    disabled="@loading">
                <i class="bi bi-clipboard-check"></i>
                Kiểm kê giá vốn
            </button>
            <div class="relative">
                <input class="pl-10 pr-3 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary text-sm min-w-[220px]"
                       placeholder="Tìm kiếm sản phẩm..."
                       @bind="search"
                       @bind:event="oninput"
                       @onkeyup="OnSearchKeyUp" />
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
                    <i class="bi bi-search"></i>
                </span>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-blue-500 p-4">
            <div class="text-sm text-gray-500">Tổng sản phẩm</div>
            <div class="mt-1 text-2xl font-bold text-gray-900">@stats.Total</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-red-500 p-4">
            <div class="text-sm text-gray-500">Hết hàng</div>
            <div class="mt-1 text-2xl font-bold text-red-600">@stats.OutOfStock</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-orange-400 p-4">
            <div class="text-sm text-gray-500">Sắp hết hàng</div>
            <div class="mt-1 text-2xl font-bold text-orange-500">@stats.LowStock</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-emerald-500 p-4">
            <div class="text-sm text-gray-500">Còn hàng</div>
            <div class="mt-1 text-2xl font-bold text-emerald-600">@stats.InStock</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6 p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Trạng thái tồn kho</label>
                <select class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                        @bind="stockStatus"
                        @bind:after="OnFilterChanged">
                    <option value="">Tất cả</option>
                    <option value="out_of_stock">Hết hàng</option>
                    <option value="low_stock">Sắp hết hàng (&lt; 10)</option>
                    <option value="in_stock">Còn hàng (≥ 10)</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Sắp xếp theo</label>
                <select class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                        @bind="sortBy"
                        @bind:after="OnFilterChanged">
                    <option value="id">Mã ID</option>
                    <option value="quantity_desc">Số lượng (Cao → Thấp)</option>
                    <option value="quantity_asc">Số lượng (Thấp → Cao)</option>
                    <option value="price_desc">Giá (Cao → Thấp)</option>
                    <option value="price_asc">Giá (Thấp → Cao)</option>
                    <option value="product_name_asc">Tên sản phẩm (A-Z)</option>
                    <option value="product_name_desc">Tên sản phẩm (Z-A)</option>
                    <option value="updated_at_desc">Cập nhật mới nhất</option>
                    <option value="updated_at_asc">Cập nhật cũ nhất</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Notification -->
    @if (!string.IsNullOrEmpty(notificationMessage))
    {
        <div class="mb-4 px-4 py-3 rounded-lg text-sm @GetNotificationCss()">
            @notificationMessage
        </div>
    }

    <!-- Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Mã SP</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Tên sản phẩm</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">SKU</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Danh mục</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Nhà cung cấp</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-right">Giá bán</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-right">Giá vốn</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-center">Số lượng tồn</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Cập nhật lần cuối</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-center">Hành động</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @if (loading)
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-gray-500">
                            <div class="flex flex-col items-center gap-2">
                                <div class="w-8 h-8 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
                                <span>Đang tải dữ liệu...</span>
                            </div>
                        </td>
                    </tr>
                }
                else if (!string.IsNullOrEmpty(error))
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-red-600">@error</td>
                    </tr>
                }
                else if (items.Count == 0)
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-gray-500">
                            Không có dữ liệu tồn kho.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in items)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-4 py-3 text-sm text-gray-700">@item.ProductId</td>
                            <td class="px-4 py-3 text-sm font-medium text-gray-900">@item.ProductName</td>
                            <td class="px-4 py-3 text-sm text-gray-600">@(item.Sku ?? "—")</td>
                            <td class="px-4 py-3 text-sm text-gray-600">@(item.CategoryName ?? "—")</td>
                            <td class="px-4 py-3 text-sm text-gray-600">@(item.SupplierName ?? "—")</td>
                            <td class="px-4 py-3 text-sm text-right text-indigo-600 font-semibold">
                                @item.Price.ToString("N0") ₫
                            </td>
                            <td class="px-4 py-3 text-sm text-right text-gray-700">
                                @(item.Cost.HasValue ? item.Cost.Value.ToString("N0") + " ₫" : "—")
                            </td>
                            <td class="px-4 py-3 text-sm text-center">
                                <div class="flex flex-col items-center gap-1">
                                    <span class="@GetQuantityColor(item.Quantity)">
                                        @item.Quantity
                                    </span>
                                    @GetQuantityBadge(item.Quantity)
                                </div>
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-600">
                                @FormatDate(item.UpdatedAt)
                            </td>
                            <td class="px-4 py-3 text-sm text-center">
                                <button class="px-3 py-1 rounded-lg bg-emerald-100 text-emerald-700 hover:bg-emerald-200 text-xs font-semibold flex items-center gap-1 mx-auto"
                                        @onclick="() => OpenImportModal(item)">
                                    <i class="bi bi-box-arrow-in-down"></i>
                                    Nhập hàng
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="pagination-container">
            <div class="pagination-info">
                <span>Hiển thị:</span>
                <select class="form-select page-size-select" 
                        @bind="pageSize" 
                        @bind:event="onchange"
                        @bind:after="OnPageSizeChanged">
                    <option value="10">10/trang</option>
                    <option value="20">20/trang</option>
                    <option value="50">50/trang</option>
                    <option value="100">100/trang</option>
                </select>
            </div>
            <div class="pagination">
                <button class="page-btn" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1 || loading)">
                    <i class="bi bi-chevron-double-left"></i>
                </button>
                <button class="page-btn" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1 || loading)">
                    <i class="bi bi-chevron-left"></i>
                </button>
                
                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    var pageNum = i;
                    <button class="page-btn @(currentPage == pageNum ? "active" : "")" 
                            @onclick="() => ChangePage(pageNum)"
                            disabled="@loading">
                        @pageNum
                    </button>
                }
                
                <button class="page-btn" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == totalPages || loading)">
                    <i class="bi bi-chevron-right"></i>
                </button>
                <button class="page-btn" @onclick="() => ChangePage(totalPages)" disabled="@(currentPage == totalPages || loading)">
                    <i class="bi bi-chevron-double-right"></i>
                </button>
            </div>
            <div class="pagination-info">
                Trang @currentPage / @totalPages (@totalItems sản phẩm)
            </div>
        </div>
    }
</div>

@* Modal nhập hàng *@
@if (importModalOpen && selectedItem != null)
{
    <div class="fixed inset-0 bg-black/30 backdrop-blur-[2px] flex items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-md p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <i class="bi bi-box-arrow-in-down text-emerald-600"></i>
                Nhập hàng
            </h2>

            <div class="mb-4 p-3 bg-gray-50 rounded-lg space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-600">Sản phẩm:</span>
                    <span class="font-semibold text-gray-900">@selectedItem.ProductName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">SKU:</span>
                    <span class="font-medium">@(selectedItem.Sku ?? "—")</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Nhà cung cấp:</span>
                    <span class="font-medium text-blue-600">@(selectedItem.SupplierName ?? "—")</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Số lượng hiện tại:</span>
                    <span class="text-lg font-bold text-indigo-600">@selectedItem.Quantity</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Giá vốn hiện tại:</span>
                    <span class="font-semibold text-orange-600">
                        @(selectedItem.Cost.HasValue ? selectedItem.Cost.Value.ToString("N0") + " ₫" : "Chưa có")
                    </span>
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Số lượng nhập <span class="text-red-500">*</span>
                </label>
                <input type="number"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                       min="1"
                       placeholder="Nhập số lượng cần nhập kho"
                       @bind="importQuantity" />
                <p class="mt-1 text-xs text-gray-500">
                    <i class="bi bi-info-circle"></i>
                    Số lượng sau khi nhập: <span class="font-semibold text-emerald-600">@(selectedItem.Quantity + importQuantity)</span>
                </p>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Giá vốn mới (tùy chọn)
                </label>
                <div class="relative">
                    <input type="number"
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 pr-8 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                           min="0"
                           step="1000"
                           placeholder="Nhập giá vốn mới (nếu thay đổi)"
                           @bind="importCost" />
                    <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm">₫</span>
                </div>
                <p class="mt-1 text-xs text-gray-500">
                    <i class="bi bi-info-circle"></i>
                    Để trống nếu giữ nguyên giá vốn hiện tại
                </p>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Ghi chú (tùy chọn)
                </label>
                <textarea class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm"
                          rows="2"
                          @bind="importNote"
                          placeholder="VD: Nhập hàng tháng 12/2025, lô hàng #123..."></textarea>
            </div>

            @if (!string.IsNullOrEmpty(modalError))
            {
                <div class="mb-3 px-3 py-2 rounded-lg bg-red-100 text-red-700 text-sm flex items-start gap-2">
                    <i class="bi bi-exclamation-triangle-fill mt-0.5"></i>
                    <span>@modalError</span>
                </div>
            }

            <div class="flex justify-end gap-2 mt-4">
                <button class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm"
                        disabled="@saving"
                        @onclick="CloseImportModal">
                    Hủy
                </button>
                <button class="px-4 py-2 rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 text-sm disabled:opacity-60 flex items-center gap-2"
                        disabled="@saving"
                        @onclick="SaveImportAsync">
                    @if (saving)
                    {
                        <span class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></span>
                        <span>Đang xử lý...</span>
                    }
                    else
                    {
                        <i class="bi bi-check-lg"></i>
                        <span>Xác nhận nhập hàng</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@* Modal kiểm kê giá vốn *@
@if (auditModalOpen)
{
    <div class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-4xl max-h-[90vh] overflow-hidden flex flex-col">
            <!-- Header -->
            <div class="px-6 py-4 border-b border-gray-200 bg-amber-50">
                <h2 class="text-xl font-semibold text-gray-800 flex items-center gap-2">
                    <i class="bi bi-clipboard-check text-amber-600"></i>
                    Kiểm kê giá vốn
                </h2>
                <p class="text-sm text-gray-600 mt-1">
                    Danh sách sản phẩm có giá vốn lớn hơn giá bán
                </p>
            </div>

            <!-- Content -->
            <div class="flex-1 overflow-y-auto p-6">
                @if (auditLoading)
                {
                    <div class="flex flex-col items-center justify-center py-12">
                        <div class="w-12 h-12 border-4 border-amber-500 border-t-transparent rounded-full animate-spin"></div>
                        <p class="mt-4 text-gray-600">Đang kiểm tra...</p>
                    </div>
                }
                else if (auditResult != null)
                {
                    @if (auditResult.InvalidProducts.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="bi bi-check-circle text-6xl text-green-500"></i>
                            <h3 class="mt-4 text-xl font-semibold text-gray-800">Tất cả đều ổn!</h3>
                            <p class="mt-2 text-gray-600">Không có sản phẩm nào có giá vốn > giá bán</p>
                        </div>
                    }
                    else
                    {
                        <!-- Summary -->
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
                            <div class="flex items-start gap-3">
                                <i class="bi bi-exclamation-triangle-fill text-red-600 text-xl mt-0.5"></i>
                                <div>
                                    <h3 class="font-semibold text-red-800">Phát hiện @auditResult.TotalInvalid sản phẩm có vấn đề</h3>
                                    <p class="text-sm text-red-700 mt-1">
                                        Các sản phẩm này có giá vốn cao hơn giá bán, cần xem xét lại giá hoặc ẩn khỏi cửa hàng.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Table -->
                        <div class="border border-gray-200 rounded-lg overflow-hidden">
                            <table class="min-w-full">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-left">Sản phẩm</th>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-left">NCC</th>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-right">Giá bán</th>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-right">Giá vốn</th>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-right">Chênh lệch</th>
                                        <th class="px-4 py-3 text-xs font-semibold text-gray-600 text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var product in auditResult.InvalidProducts)
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-4 py-3">
                                                <div class="text-sm font-medium text-gray-900">@product.ProductName</div>
                                                <div class="text-xs text-gray-500">SKU: @(product.Sku ?? "—")</div>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-600">@(product.SupplierName ?? "—")</td>
                                            <td class="px-4 py-3 text-sm text-right text-gray-700">@product.Price.ToString("N0") ₫</td>
                                            <td class="px-4 py-3 text-sm text-right font-semibold text-red-600">@product.Cost.ToString("N0") ₫</td>
                                            <td class="px-4 py-3 text-sm text-right">
                                                <span class="font-semibold text-red-700">-@product.PriceDifference.ToString("N0") ₫</span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                @if (product.IsActive)
                                                {
                                                    <span class="px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">Đang bán</span>
                                                }
                                                else
                                                {
                                                    <span class="px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">Đã ẩn</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 border-t border-gray-200 bg-gray-50 flex justify-between items-center">
                <div class="text-sm text-gray-600">
                    @if (auditResult != null && auditResult.TotalInvalid > 0)
                    {
                        var activeCount = auditResult.InvalidProducts.Count(p => p.IsActive);
                        <span>Đang hiển thị: <strong>@activeCount</strong> sản phẩm đang bán</span>
                    }
                </div>
                <div class="flex gap-2">
                    <button class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm"
                            @onclick="CloseAuditModal"
                            disabled="@auditLoading">
                        Đóng
                    </button>
                    @if (auditResult != null && auditResult.InvalidProducts.Any(p => p.IsActive))
                    {
                        <button class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 text-sm flex items-center gap-2"
                                @onclick="DeactivateInvalidProducts"
                                disabled="@auditLoading">
                            <i class="bi bi-eye-slash"></i>
                            Ẩn tất cả sản phẩm có vấn đề
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<InventoryListItemDTO> items = new();
    private InventoryStatsDTO stats = new();

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalItems;
    private int totalPages = 1;

    private string? search;
    private string? sortBy = "id";
    private string? stockStatus;

    private bool loading;
    private string? error;

    private string? notificationMessage;
    private bool notificationIsSuccess = true;

    // Modal state
    private bool importModalOpen;
    private InventoryListItemDTO? selectedItem;
    private int importQuantity = 0;
    private decimal? importCost = null;    // THÊM MỚI
    private string? importNote;
    private string? modalError;
    private bool saving;

    private bool auditModalOpen;
    private bool auditLoading;
    private InventoryAuditResultDTO? auditResult;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        loading = true;
        error = null;
        try
        {
            var result = await InventoryService.GetInventoryAsync(
                currentPage,
                pageSize,
                string.IsNullOrWhiteSpace(search) ? null : search,
                sortBy,
                stockStatus);

            items = result.Items ?? new List<InventoryListItemDTO>();
            totalItems = result.TotalItems;
            totalPages = result.TotalPages > 0 ? result.TotalPages : 1;

            var statsResult = await InventoryService.GetStatsAsync();
            if (statsResult != null)
            {
                stats = statsResult;
            }
        }
        catch (Exception ex)
        {
            error = $"Không thể tải danh sách tồn kho: {ex.Message}";
            items = new();
            totalItems = 0;
            totalPages = 1;
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage < 1 || newPage > totalPages || newPage == currentPage) return;
        currentPage = newPage;
        await LoadDataAsync();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadDataAsync();
        }
    }

    private async Task OnFilterChanged()
    {
        currentPage = 1;
        await LoadDataAsync();
    }

    private async Task OnPageSizeChanged()
    {
