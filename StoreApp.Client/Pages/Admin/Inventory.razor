    private string FormatDate(DateTime? date)
    {
        if (!date.HasValue) return "—";
        return date.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm");
    }

    private string GetQuantityColor(int quantity)
    {
        if (quantity == 0) return "text-red-600 font-semibold";
        if (quantity < 10) return "text-orange-600 font-semibold";
        return "text-emerald-600 font-semibold";
    }

    private RenderFragment GetQuantityBadge(int quantity) => builder =>
    {
        var (bg, text, label) = quantity switch
        {
            0 => ("bg-red-100", "text-red-800", "Hết hàng"),
            < 10 => ("bg-orange-100", "text-orange-800", "Sắp hết"),
            _ => ("bg-emerald-100", "text-emerald-800", "Còn hàng")
        };

        builder.OpenElement(0, "span");
        builder.AddAttribute(1, "class", $"px-2 py-0.5 rounded-full text-xs {bg} {text}");
        builder.AddContent(2, label);
        builder.CloseElement();
    };

    private void OpenImportModal(InventoryListItemDTO item)
    {
        selectedItem = item;
        importQuantity = 0;
        importCost = null;           // RESET
        importNote = null;
        modalError = null;
        saving = false;
        importModalOpen = true;
    }

    private void CloseImportModal()
    {
        importModalOpen = false;
        selectedItem = null;
        modalError = null;
    }

    private async Task SaveImportAsync()
    {
        modalError = null;

        if (selectedItem == null)
        {
            modalError = "Không xác định được sản phẩm.";
            return;
        }

        if (importQuantity <= 0)
        {
            modalError = "Số lượng nhập phải lớn hơn 0.";
            return;
        }

        if (importCost.HasValue && importCost.Value < 0)
        {
            modalError = "Giá vốn không được âm.";
            return;
        }

        try
        {
            saving = true;
            var newQuantity = selectedItem.Quantity + importQuantity;
            
            var reason = string.IsNullOrWhiteSpace(importNote)
                ? $"Nhập hàng: +{importQuantity} (từ {selectedItem.Quantity} → {newQuantity})"
                : $"Nhập hàng: +{importQuantity} - {importNote}";

            var ok = await InventoryService.AdjustInventoryAsync(
                selectedItem.Id, 
                newQuantity, 
                reason,
                importCost,              // Truyền giá vốn mới
                selectedItem.ProductId   // Truyền productId
            );

            if (!ok)
            {
                modalError = "Không thể nhập hàng. Vui lòng thử lại.";
                return;
            }

            var message = $"Nhập hàng thành công! Đã thêm {importQuantity} vào kho.";
            if (importCost.HasValue)
            {
                message += $" Giá vốn đã cập nhật: {importCost.Value:N0}₫";
            }

            ShowNotification(message, true);

            importModalOpen = false;
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            modalError = $"Lỗi khi nhập hàng: {ex.Message}";
        }
        finally
        {
            saving = false;
        }
    }

