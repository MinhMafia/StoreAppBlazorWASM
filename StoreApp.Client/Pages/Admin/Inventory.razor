    private void CloseAuditModal()
    {
        auditModalOpen = false;
        auditResult = null;
    }

    private async Task DeactivateInvalidProducts()
    {
        if (auditResult == null || !auditResult.InvalidProducts.Any(p => p.IsActive))
            return;

        auditLoading = true;
        try
        {
            var result = await InventoryService.AuditInventoryAsync(autoDeactivate: true);
            
            if (result != null && result.TotalDeactivated > 0)
            {
                ShowNotification($"Đã ẩn {result.TotalDeactivated} sản phẩm thành công!", true);
                auditResult = result;
                await LoadDataAsync(); // Reload main table
            }
        }
        catch (Exception ex)
        {
            ShowNotification($"Lỗi khi ẩn sản phẩm: {ex.Message}", false);
        }
        finally
        {
            auditLoading = false;
            StateHasChanged();
        }
    }
    
    private void ShowNotification(string message, bool isSuccess)
    {
        notificationMessage = message;
        notificationIsSuccess = isSuccess;

        _ = Task.Run(async () =>
        {
            await Task.Delay(3000);
            await InvokeAsync(() =>
            {
                notificationMessage = null;
                StateHasChanged();
            });
        });
    }

    private string GetNotificationCss()
    {
        return notificationIsSuccess
            ? "bg-green-100 text-green-800 border border-green-200"
            : "bg-red-100 text-red-800 border border-red-200";
    }
