@page "/admin/inventory"
@using StoreApp.Shared
@inject IInventoryClientService InventoryService

<PageTitle>Quản lý tồn kho</PageTitle>

<div class="container-fluid px-4 py-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
            <i class="bi bi-boxes text-primary"></i>
            Quản lý tồn kho
        </h1>

        <div class="flex items-center gap-3">
            <button class="px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-gray-700 flex items-center gap-2"
                    @onclick="RefreshAsync">
                <i class="bi bi-arrow-clockwise"></i>
                <span class="hidden sm:inline">Làm mới</span>
            </button>
            <div class="relative">
                <input class="pl-10 pr-3 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary text-sm min-w-[220px]"
                       placeholder="Tìm kiếm sản phẩm..."
                       @bind="search"
                       @bind:event="oninput"
                       @onkeyup="OnSearchKeyUp" />
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
                    <i class="bi bi-search"></i>
                </span>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-blue-500 p-4">
            <div class="text-sm text-gray-500">Tổng sản phẩm</div>
            <div class="mt-1 text-2xl font-bold text-gray-900">@stats.Total</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-red-500 p-4">
            <div class="text-sm text-gray-500">Hết hàng</div>
            <div class="mt-1 text-2xl font-bold text-red-600">@stats.OutOfStock</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-orange-400 p-4">
            <div class="text-sm text-gray-500">Sắp hết hàng</div>
            <div class="mt-1 text-2xl font-bold text-orange-500">@stats.LowStock</div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border-l-4 border-emerald-500 p-4">
            <div class="text-sm text-gray-500">Còn hàng</div>
            <div class="mt-1 text-2xl font-bold text-emerald-600">@stats.InStock</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6 p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Trạng thái tồn kho</label>
                <select class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                        @bind="stockStatus"
                        @bind:after="OnFilterChanged">
                    <option value="">Tất cả</option>
                    <option value="out_of_stock">Hết hàng</option>
                    <option value="low_stock">Sắp hết hàng (&lt; 10)</option>
                    <option value="in_stock">Còn hàng (≥ 10)</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-600 mb-1">Sắp xếp theo</label>
                <select class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary"
                        @bind="sortBy"
                        @bind:after="OnFilterChanged">
                    <option value="id">Mã ID</option>
                    <option value="quantity_desc">Số lượng (Cao → Thấp)</option>
                    <option value="quantity_asc">Số lượng (Thấp → Cao)</option>
                    <option value="price_desc">Giá (Cao → Thấp)</option>
                    <option value="price_asc">Giá (Thấp → Cao)</option>
                    <option value="product_name_asc">Tên sản phẩm (A-Z)</option>
                    <option value="product_name_desc">Tên sản phẩm (Z-A)</option>
                    <option value="updated_at_desc">Cập nhật mới nhất</option>
                    <option value="updated_at_asc">Cập nhật cũ nhất</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Notification -->
    @if (!string.IsNullOrEmpty(notificationMessage))
    {
        <div class="mb-4 px-4 py-3 rounded-lg text-sm @GetNotificationCss()">
            @notificationMessage
        </div>
    }

    <!-- Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">STT</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Mã SP</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Tên sản phẩm</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">SKU</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Danh mục</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-right">Giá</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-center">ĐVT</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-center">Số lượng tồn</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-left">Cập nhật lần cuối</th>
                    <th class="px-4 py-3 text-xs font-semibold text-gray-500 text-center">Hành động</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @if (loading)
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-gray-500">
                            <div class="flex flex-col items-center gap-2">
                                <div class="w-8 h-8 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
                                <span>Đang tải dữ liệu...</span>
                            </div>
                        </td>
                    </tr>
                }
                else if (!string.IsNullOrEmpty(error))
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-red-600">@error</td>
                    </tr>
                }
                else if (items.Count == 0)
                {
                    <tr>
                        <td colspan="10" class="py-8 text-center text-gray-500">
                            Không có dữ liệu tồn kho.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var (item, index) in items.Select((value, idx) => (value, idx)))
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-4 py-3 text-sm text-gray-700">
                                @(((currentPage - 1) * pageSize) + index + 1)
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-700">@item.ProductId</td>
                            <td class="px-4 py-3 text-sm font-medium text-gray-900">@item.ProductName</td>
                            <td class="px-4 py-3 text-sm text-gray-600">@(item.Sku ?? "—")</td>
                            <td class="px-4 py-3 text-sm text-gray-600">@(item.CategoryName ?? "—")</td>
                            <td class="px-4 py-3 text-sm text-right text-indigo-600 font-semibold">
                                @item.Price.ToString("N0") ₫
                            </td>
                            <td class="px-4 py-3 text-sm text-center text-gray-600">
                                @(item.Unit ?? "—")
                            </td>
                            <td class="px-4 py-3 text-sm text-center">
                                <div class="flex flex-col items-center gap-1">
                                    <span class="@GetQuantityColor(item.Quantity)">
                                        @item.Quantity
                                    </span>
                                    @GetQuantityBadge(item.Quantity)
                                </div>
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-600">
                                @FormatDate(item.UpdatedAt)
                            </td>
                            <td class="px-4 py-3 text-sm text-center">
                                <button class="px-3 py-1 rounded-lg bg-indigo-100 text-indigo-700 hover:bg-indigo-200 text-xs font-semibold"
                                        @onclick="() => OpenAdjustModal(item)">
                                    Điều chỉnh
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="mt-4 flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div class="text-sm text-gray-600">
            Hiển thị
            <strong>@(((currentPage - 1) * pageSize) + 1) - @Math.Min(currentPage * pageSize, totalItems)</strong>
            / @totalItems sản phẩm
        </div>
        <div class="flex items-center gap-2">
            <button class="px-3 py-1 rounded-md bg-gray-100 hover:bg-gray-200 disabled:opacity-50 text-sm"
                    disabled="@(currentPage == 1)"
                    @onclick="() => ChangePage(1)">
                Đầu
            </button>
            <button class="px-3 py-1 rounded-md bg-gray-100 hover:bg-gray-200 disabled:opacity-50 text-sm"
                    disabled="@(currentPage == 1)"
                    @onclick="() => ChangePage(currentPage - 1)">
                Trước
            </button>

            <span class="px-3 py-1 rounded-md bg-white border text-sm">
                @currentPage / @totalPages
            </span>

            <button class="px-3 py-1 rounded-md bg-gray-100 hover:bg-gray-200 disabled:opacity-50 text-sm"
                    disabled="@(currentPage == totalPages)"
                    @onclick="() => ChangePage(currentPage + 1)">
                Sau
            </button>
            <button class="px-3 py-1 rounded-md bg-gray-100 hover:bg-gray-200 disabled:opacity-50 text-sm"
                    disabled="@(currentPage == totalPages)"
                    @onclick="() => ChangePage(totalPages)">
                Cuối
            </button>
        </div>
    </div>
</div>

@* Modal điều chỉnh tồn kho *@
@if (adjustModalOpen && selectedItem != null)
{
    <div class="fixed inset-0 bg-black/30 backdrop-blur-[2px] flex items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-md p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
                Điều chỉnh số lượng tồn kho
            </h2>

            <div class="mb-4 text-sm text-gray-700 space-y-1">
                <div><span class="font-semibold">Sản phẩm:</span> @selectedItem.ProductName</div>
                <div><span class="font-semibold">SKU:</span> @(selectedItem.Sku ?? "—")</div>
                <div>
                    <span class="font-semibold">Số lượng hiện tại:</span>
                    <span class="text-indigo-600 font-semibold">@selectedItem.Quantity</span>
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Số lượng mới <span class="text-red-500">*</span>
                </label>
                <input type="number"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-primary focus:border-primary"
                       min="0"
                       @bind="adjustNewQuantity" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Lý do điều chỉnh (tùy chọn)
                </label>
                <textarea class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-primary focus:border-primary text-sm"
                          rows="3"
                          @bind="adjustReason"
                          placeholder="Nhập lý do điều chỉnh..."></textarea>
            </div>

            @if (!string.IsNullOrEmpty(modalError))
            {
                <div class="mb-3 px-3 py-2 rounded-lg bg-red-100 text-red-700 text-sm">
                    @modalError
                </div>
            }

            <div class="flex justify-end gap-2 mt-4">
                <button class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm"
                        disabled="@saving"
                        @onclick="CloseAdjustModal">
                    Hủy
                </button>
                <button class="px-4 py-2 rounded-lg bg-primary text-white hover:bg-primaryHover text-sm disabled:opacity-60"
                        disabled="@saving"
                        @onclick="SaveAdjustAsync">
                    @(saving ? "Đang lưu..." : "Cập nhật")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<InventoryListItemDTO> items = new();
    private InventoryStatsDTO stats = new();

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalItems;
    private int totalPages = 1;

    private string? search;
    private string? sortBy = "id";
    private string? stockStatus;

    private bool loading;
    private string? error;

    private string? notificationMessage;
    private bool notificationIsSuccess = true;

    // Modal state
    private bool adjustModalOpen;
    private InventoryListItemDTO? selectedItem;
    private int adjustNewQuantity;
    private string? adjustReason;
    private string? modalError;
    private bool saving;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        loading = true;
        error = null;
        try
        {
            var result = await InventoryService.GetInventoryAsync(
                currentPage,
                pageSize,
                string.IsNullOrWhiteSpace(search) ? null : search,
                sortBy,
                stockStatus);

            items = result.Items ?? new List<InventoryListItemDTO>();
            totalItems = result.TotalItems;
            totalPages = result.TotalPages > 0 ? result.TotalPages : 1;

            var statsResult = await InventoryService.GetStatsAsync();
            if (statsResult != null)
            {
                stats = statsResult;
            }
        }
        catch (Exception ex)
        {
            error = $"Không thể tải danh sách tồn kho: {ex.Message}";
            items = new();
            totalItems = 0;
            totalPages = 1;
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshAsync()
    {
        currentPage = 1;
        await LoadDataAsync();
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage < 1 || newPage > totalPages || newPage == currentPage) return;
        currentPage = newPage;
        await LoadDataAsync();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadDataAsync();
        }
    }

    private async Task OnFilterChanged()
    {
        currentPage = 1;
        await LoadDataAsync();
    }

    private string FormatDate(DateTime? date)
    {
        if (!date.HasValue) return "—";
        return date.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm");
    }

    private string GetQuantityColor(int quantity)
    {
        if (quantity == 0) return "text-red-600 font-semibold";
        if (quantity < 10) return "text-orange-600 font-semibold";
        return "text-emerald-600";
    }

    private RenderFragment GetQuantityBadge(int quantity) => builder =>
    {
        var (bg, text, label) = quantity switch
        {
            0 => ("bg-red-100", "text-red-800", "Hết hàng"),
            < 10 => ("bg-orange-100", "text-orange-800", "Sắp hết"),
            _ => ("bg-emerald-100", "text-emerald-800", "Còn hàng")
        };

        builder.OpenElement(0, "span");
        builder.AddAttribute(1, "class", $"px-2 py-0.5 rounded-full text-xs {bg} {text}");
        builder.AddContent(2, label);
        builder.CloseElement();
    };

    private void OpenAdjustModal(InventoryListItemDTO item)
    {
        selectedItem = item;
        adjustNewQuantity = item.Quantity;
        adjustReason = null;
        modalError = null;
        saving = false;
        adjustModalOpen = true;
    }

    private void CloseAdjustModal()
    {
        adjustModalOpen = false;
        selectedItem = null;
        modalError = null;
    }

    private async Task SaveAdjustAsync()
    {
        modalError = null;

        if (selectedItem == null)
        {
            modalError = "Không xác định được sản phẩm.";
            return;
        }

        if (adjustNewQuantity < 0)
        {
            modalError = "Số lượng phải là số nguyên không âm.";
            return;
        }

        if (adjustNewQuantity == selectedItem.Quantity)
        {
            modalError = "Số lượng mới phải khác số lượng hiện tại.";
            return;
        }

        try
        {
            saving = true;
            var ok = await InventoryService.AdjustInventoryAsync(selectedItem.Id, adjustNewQuantity, adjustReason);
            if (!ok)
            {
                modalError = "Không thể cập nhật tồn kho. Vui lòng thử lại.";
                return;
            }

            ShowNotification("Cập nhật tồn kho thành công.", true);

            adjustModalOpen = false;
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            modalError = $"Lỗi khi cập nhật tồn kho: {ex.Message}";
        }
        finally
        {
            saving = false;
        }
    }

    private void ShowNotification(string message, bool isSuccess)
    {
        notificationMessage = message;
        notificationIsSuccess = isSuccess;

        _ = Task.Run(async () =>
        {
            await Task.Delay(2500);
            await InvokeAsync(() =>
            {
                notificationMessage = null;
                StateHasChanged();
            });
        });
    }

    private string GetNotificationCss()
    {
        return notificationIsSuccess
            ? "bg-green-100 text-green-800 border border-green-200"
            : "bg-red-100 text-red-800 border border-red-200";
    }
}


