    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            Console.WriteLine($"üîê Admin login attempt - Username: {loginRequest.Username}");

            var response = await Http.PostAsJsonAsync("api/auth/login", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                var authResponse = await response.Content.ReadFromJsonAsync<AuthResponse>();
                
                if (authResponse != null)
                {
                    Console.WriteLine($"‚úÖ Login successful - Role: {authResponse.Role}");

                    // Ki·ªÉm tra role - ch·ªâ cho ph√©p admin v√† staff
                    if (authResponse.Role != "admin" && authResponse.Role != "staff")
                    {
                        errorMessage = "T√†i kho·∫£n kh√¥ng c√≥ quy·ªÅn truy c·∫≠p khu v·ª±c qu·∫£n tr·ªã";
                        Console.WriteLine($"‚ùå Access denied - Role: {authResponse.Role}");
                        return;
                    }

                    // L∆∞u token v√† th√¥ng tin user v√†o LocalStorage
                    await LocalStorage.SetItemAsStringAsync("authToken", authResponse.Token);
                    await LocalStorage.SetItemAsStringAsync("userName", authResponse.UserName);
                    await LocalStorage.SetItemAsStringAsync("userRole", authResponse.Role);

                    Console.WriteLine($"‚úÖ Admin/Staff authenticated successfully");

                    // Redirect v·ªÅ trang admin
                    Nav.NavigateTo("/admin/dashboard", forceLoad: true);
                }
            }
            else
