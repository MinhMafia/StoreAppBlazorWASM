    private async Task HandleRegister()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            successMessage = string.Empty;

            Console.WriteLine($"üìù Attempting to register customer: {registerRequest.Username}");

            var response = await Http.PostAsJsonAsync("api/auth/register-customer", registerRequest);

            if (response.IsSuccessStatusCode)
