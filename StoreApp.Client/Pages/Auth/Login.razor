                    if (role == "admin" || role == "staff")
                    {
                        Nav.NavigateTo("/admin/dashboard", forceLoad: true);
                    }
                    else
                    {
                        Nav.NavigateTo("/store", forceLoad: true);
                    }
                }
            }
            catch
            {
                // Ignore
            }
        }
    } *@

    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            Console.WriteLine($"🔐 Customer login attempt - Email: {loginRequest.Username}");

            // Gọi API login-customer thay vì login
            var response = await Http.PostAsJsonAsync("api/auth/login-customer", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                var authResponse = await response.Content.ReadFromJsonAsync<AuthResponse>();

                if (authResponse != null)
                {
                    Console.WriteLine($"✅ Login successful - Role: {authResponse.Role}");

                    // Lưu token và thông tin user vào LocalStorage
                    await LocalStorage.SetItemAsStringAsync("authToken", authResponse.Token);
                    await LocalStorage.SetItemAsStringAsync("userName", authResponse.UserName);
                    await LocalStorage.SetItemAsStringAsync("userRole", authResponse.Role);

                    Console.WriteLine($"✅ Customer authenticated successfully");

                    // Redirect theo luong tu thanh toan neu co
                    var redirectAfterCart = await LocalStorage.GetItemAsync<bool>("redirectAfterLoginCart");
                    if (redirectAfterCart)
                    {
                        Nav.NavigateTo("/store/cart", forceLoad: true);
                    }
                    else
                    {
                        Nav.NavigateTo("/store", forceLoad: true);
                    }
                }
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Message ?? "Email hoặc mật khẩu không đúng";
                Console.WriteLine($"❌ Login failed: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Có lỗi xảy ra. Vui lòng thử lại sau.";
            Console.WriteLine($"❌ Login exception: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private class ErrorResponse
    {
        public string Message { get; set; } = string.Empty;
    }
}

