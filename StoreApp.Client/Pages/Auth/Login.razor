@code {
    private LoginRequest loginRequest = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private bool showPassword = false;
    private bool isInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Ki·ªÉm tra n·∫øu ƒë√£ ƒëƒÉng nh·∫≠p th√¨ redirect
                var token = await LocalStorage.GetItemAsStringAsync("authToken");
                if (!string.IsNullOrEmpty(token))
                {
                    Nav.NavigateTo("/", forceLoad: true);
                }
            }
            catch
            {
                // Ignore errors during initialization
            }
            finally
            {
                isInitialized = true;
                StateHasChanged();
            }
        }
    }

    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            Console.WriteLine($"üîê Attempting login with username: {loginRequest.Username}");

            var response = await Http.PostAsJsonAsync("api/auth/login", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                var authResponse = await response.Content.ReadFromJsonAsync<AuthResponse>();
                
                if (authResponse != null)
                {
                    // L∆∞u token v√† th√¥ng tin user v√†o LocalStorage
                    await LocalStorage.SetItemAsStringAsync("authToken", authResponse.Token);
                    await LocalStorage.SetItemAsStringAsync("userName", authResponse.UserName);
                    await LocalStorage.SetItemAsStringAsync("userRole", authResponse.Role);

                    Console.WriteLine($"‚úÖ Login successful! Token saved. Role: {authResponse.Role}");

                    // Redirect v·ªÅ trang ch·ªß
                    Nav.NavigateTo("/", forceLoad: true);
                }
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Message ?? "T√™n ƒëƒÉng nh·∫≠p ho·∫∑c m·∫≠t kh·∫©u kh√¥ng ƒë√∫ng";
                Console.WriteLine($"‚ùå Login failed: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "C√≥ l·ªói x·∫£y ra. Vui l√≤ng th·ª≠ l·∫°i sau.";
            Console.WriteLine($"‚ùå Login exception: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private class ErrorResponse
    {
        public string Message { get; set; } = string.Empty;
    }
}

