@page "/api/store/cart"
@inject NavigationManager Navigation
@layout StoreLayout

<PageTitle>Giỏ hàng - Cửa Hàng Tiện Lợi</PageTitle>
<style>
.bg-primary            { background-color: #4ade80 !important; }
.text-primary          { color: #4ade80 !important; }
.hover-bg-primary:hover { background-color: #16a34a !important; }


.from-primary { --tw-gradient-from: #4ade80 !important; }
.to-primaryHover { --tw-gradient-to: #16a34a !important; }
.text-primaryDark { color: #22c55e !important; }
.bg-primaryHover { background-color: #16a34a !important; }
.hover\:bg-primaryHover:hover { background-color: #16a34a !important; }

.primaryLight\/30 { background-color: rgba(134, 239, 172, 0.3) !important; }
</style>



<div class="min-h-screen bg-gray-50 py-10">
    <div class="max-w-7xl mx-auto px-4">

        <h2 class="text-3xl font-bold text-gray-800 mb-8">
            Giỏ hàng của bạn
            <span class="text-lg font-normal text-gray-600">(4 sản phẩm)</span>
        </h2>

        <!-- Danh sách sản phẩm -->
        <div class="bg-white rounded-3xl shadow-soft overflow-hidden mb-8">

            <!-- Item 1 -->
            <div class="p-6 border-b border-gray-100 transition-all duration-300 hover:bg-gradient-to-r hover:from-primaryLight/30 hover:to-transparent hover:shadow-md hover:scale-[1.01] hover:-translate-y-1">
                <div class="flex items-center gap-5">
                    <input type="checkbox" checked class="w-6 h-6 rounded accent-primary" />
                    <img src="https://cdn.tgdd.vn/Products/Images/2443/76464/bhx/nuoc-tang-luc-red-bull-thai-lon-250ml-202404101607504957.jpg" class="w-28 h-28 object-cover rounded-2xl shadow-sm" />
                    <div class="flex-1">
                        <h3 class="font-semibold text-lg text-gray-800 line-clamp-2">Nước tăng lực Red Bull Thái 250ml</h3>
                        <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
                            <span>Đồ uống</span><span>•</span><span>lon</span>
                        </div>
                        <div class="mt-3 text-2xl font-bold text-primaryDark">37,500₫</div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="w-11 h-11 rounded-xl border border-gray-300 hover:border-primary hover:bg-primaryLight/20 transition text-xl">−</button>
                        <span class="w-16 text-center text-lg font-semibold">3</span>
                        <button class="w-11 h-11 rounded-xl bg-primary text-white hover:bg-primaryHover shadow-md transition text-xl">+</button>
                    </div>
                    <button class="text-gray-400 hover:text-red-600 transition-transform hover:scale-125">
                        <i class="fas fa-trash-alt text-2xl"></i>
                    </button>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="p-6 border-b border-gray-100 transition-all duration-300 hover:bg-gradient-to-r hover:from-primaryLight/30 hover:to-transparent hover:shadow-md hover:scale-[1.01] hover:-translate-y-1">
                <div class="flex items-center gap-5">
                    <input type="checkbox" checked class="w-6 h-6 rounded accent-primary" />
                    <img src="https://cdn.tgdd.vn/Products/Images/2565/76469/bhx/mi-hao-hao-tom-chua-cay-75g-202310170941188337.jpg" class="w-28 h-28 object-cover rounded-2xl shadow-sm" />
                    <div class="flex-1">
                        <h3 class="font-semibold text-lg text-gray-800 line-clamp-2">Mì Hảo Hảo tôm chua cay 75g</h3>
                        <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
                            <span>Mì gói</span><span>•</span><span>gói</span>
                        </div>
                        <div class="mt-3 text-2xl font-bold text-primaryDark">22,500₫</div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="w-11 h-11 rounded-xl border border-gray-300 hover:border-primary hover:bg-primaryLight/20 transition text-xl">−</button>
                        <span class="w-16 text-center text-lg font-semibold">5</span>
                        <button class="w-11 h-11 rounded-xl bg-primary text-white hover:bg-primaryHover shadow-md transition text-xl">+</button>
                    </div>
                    <button class="text-gray-400 hover:text-red-600 transition-transform hover:scale-125">
                        <i class="fas fa-trash-alt text-2xl"></i>
                    </button>
                </div>
            </div>

            <!-- Item 3 -->
            <div class="p-6 border-b border-gray-100 transition-all duration-300 hover:bg-gradient-to-r hover:from-primaryLight/30 hover:to-transparent hover:shadow-md hover:scale-[1.01] hover:-translate-y-1">
                <div class="flex items-center gap-5">
                    <input type="checkbox" class="w-6 h-6 rounded accent-primary" />
                    <img src="https://cdn.tgdd.vn/Products/Images/2386/228429/bhx/sua-tuoi-th-true-milk-it-duong-hop-1l-202404101459318884.jpg" class="w-28 h-28 object-cover rounded-2xl shadow-sm" />
                    <div class="flex-1">
                        <h3 class="font-semibold text-lg text-gray-800 line-clamp-2">Sữa tươi TH True Milk ít đường 1L</h3>
                        <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
                            <span>Sữa</span><span>•</span><span>hộp</span>
                        </div>
                        <div class="mt-3 text-2xl font-bold text-primaryDark">69,000₫</div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="w-11 h-11 rounded-xl border border-gray-300 hover:border-primary hover:bg-primaryLight/20 transition text-xl">−</button>
                        <span class="w-16 text-center text-lg font-semibold">2</span>
                        <button class="w-11 h-11 rounded-xl bg-primary text-white hover:bg-primaryHover shadow-md transition text-xl">+</button>
                    </div>
                    <button class="text-gray-400 hover:text-red-600 transition-transform hover:scale-125">
                        <i class="fas fa-trash-alt text-2xl"></i>
                    </button>
                </div>
            </div>

            <!-- Item 4 -->
            <div class="p-6 transition-all duration-300 hover:bg-gradient-to-r hover:from-primaryLight/30 hover:to-transparent hover:shadow-md hover:scale-[1.01] hover:-translate-y-1">
                <div class="flex items-center gap-5">
                    <input type="checkbox" checked class="w-6 h-6 rounded accent-primary" />
                    <img src="https://cdn.tgdd.vn/Products/Images/2417/77957/bhx/banh-oreo-kem-vani-goi-133g-202404101608234567.jpg" class="w-28 h-28 object-cover rounded-2xl shadow-sm" />
                    <div class="flex-1">
                        <h3 class="font-semibold text-lg text-gray-800 line-clamp-2">Bánh Oreo kem vani 133g</h3>
                        <div class="flex items-center gap-3 mt-2 text-sm text-gray-500">
                            <span>Bánh kẹo</span><span>•</span><span>gói</span>
                        </div>
                        <div class="mt-3 text-2xl font-bold text-primaryDark">18,500₫</div>
                    </div>
                    <div class="flex items-center gap-4">
                        <button class="w-11 h-11 rounded-xl border border-gray-300 hover:border-primary hover:bg-primaryLight/20 transition text-xl">−</button>
                        <span class="w-16 text-center text-lg font-semibold">1</span>
                        <button class="w-11 h-11 rounded-xl bg-primary text-white hover:bg-primaryHover shadow-md transition text-xl">+</button>
                    </div>
                    <button class="text-gray-400 hover:text-red-600 transition-transform hover:scale-125">
                        <i class="fas fa-trash-alt text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Tổng tiền + Thanh toán -->
        <div class="bg-white rounded-3xl shadow-soft p-8">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <p class="text-lg text-gray-600">Tổng thanh toán (3 sản phẩm):</p>
                    <p class="text-4xl font-bold text-primaryDark mt-2">78,500₫</p>
                </div>
                <button 
                @onclick="GoToCheckout"
                class="relative overflow-hidden bg-gradient-to-r from-[#4ade80] to-[#16a34a] hover:from-[#16a34a] hover:to-[#22c55e] text-white font-bold text-xl px-16 py-6 rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-500 group">
                    <span class="relative z-10">Mua hàng (3)</span> 
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 group-hover:opacity-40 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 skew-x-12"></div>
                </button>
            </div>

            <div class="flex items-center justify-between pt-6 border-t-2 border-gray-100">
                <div class="flex items-center gap-8 text-lg">
                    <label class="flex items-center gap-3 cursor-pointer select-none">
                        <input type="checkbox" class="w-6 h-6 rounded accent-primary" />
                        <span class="font-semibold text-gray-700">Chọn tất cả</span>
                    </label>
                    <button class="font-semibold text-red-600 hover:text-red-700 hover:underline">Xóa đã chọn</button>
                    <button class="font-semibold text-gray-600 hover:text-primary hover:underline">Bỏ sản phẩm không hoạt động</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToCheckout() => Navigation.NavigateTo("/api/store/checkout");
}